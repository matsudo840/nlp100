      "cell_type": "code",
      "source": [
        "def disp_tail(filename, n):\n",
        "  with open(filename, 'r', encoding='utf-8') as f:\n",
        "    rows = f.readlines()\n",
        "    for i in range(n):\n",
        "      print(rows[len(rows) - n + i], end='')\n",
        "  return"
      ],
      "execution_count": 0,
      "outputs": []
    },
    {
      "metadata": {
        "id": "dYWjtVLYoc0q",
        "colab_type": "code",
